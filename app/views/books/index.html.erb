<div class="body">
<div class="container">

    <%=  notice %>
    <% if @bookn.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <li>error</li>
      <% @bookn.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="row">



   <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback: 'no_image.png',size: '100x100'%>


          <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <td><%= current_user.name %></td>
                </tr>

                <tr>
                  <th>introduction</th>
                  <td><%= current_user.introduction %></td>
                </tr>
              </tbody>
              <td>
                   <% @user ||= current_user %>
                        <a href="<%= following_user_path(@user) %>">
                          <strong id="following" class="stat">
                            <%= @user.followings.count %>
                          </strong>
                          following
                        </a>
                      </div>
                    </td>
                  </tr>
                    <td>
                        <a href="<%= followers_user_path(@user) %>">
                          <strong id="followers" class="stat">
                            <%= @user.followers.count %>
                          </strong>
                          followers
                        </a>
                  </td>

          </table>

   <div class="row">
      <%= link_to edit_user_path(current_user) do %>
      <button type="button" class="col-xs-12 btn btn-default"><i class="glyphicon glyphicon-wrench" ></i></button>
      <% end %>

           <h1>New book</h1>
               <%= form_for(@bookn, url: '/books') do |f| %>

           <h4>Title</h4>
               <%= f.text_field :title %>

           <h4>Opinion</h4>
               <%= f.text_area :body %>

           <%= f.submit 'Create Book' %>

           <% end %>
   </div>
   </div>




<div class="col-xs-9">
    <h2>Books</h2>

       <table class="table table-hover table-inverse">

       <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
       </thead>
<% @books.each do |book| %>

       <tbody>
          <tr>
          <th>
            <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg',fallback: 'no_image.png',size: '40x40' %>
            <% end %>
            </th>
          <td><%= link_to  book.title , book_path(book.id) %></td>
          <td><%= book.body %></td>
          <td>
                <% if book.favorited_by?(current_user) %>
                  <li>
                    <%= link_to book_favorites_path(book), method: :delete do %>
                      <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
                      <%= book.favorites.count %>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to book_favorites_path(book), method: :post do %>
                      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                      <%= book.favorites.count %>
                    <% end %>
                  </li>
                <% end %>
              </td>
                        <td>
            <i class="fa fa-comment"></i>
            コメント数：<%= book.book_comments.count %></a>
          </td>

        </tr>
   <% end %>
    </tbody>
</table>


</div>
</div>
</div>
</div>

